<div class='field clearfix'>
  <hr/>
  <h4>Question</h4>
  <div class='row'>
    <%= form_field_with_label f, :text, :text_field, group_class: 'col-sm-4', field_options: { placeholder: 'question' }, label_options: { class: 'sr-only' } %>
  </div>
  <ol class='appendable'>
    <%= f.fields_for :options do |builder| %>
      <%= render 'option_fields', :f => builder %>
    <% end -%>
  </ol>
  <%= link_to_add_field 'Add option', f, :options %>
  <%= link_to_remove_field 'Remove question', f %>
</div>
