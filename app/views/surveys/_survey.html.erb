<div class="survey">
  <p>
    <%= link_to survey_path(survey.id), method: :delete, data: {confirm: "Are you sure you want to delete this survey?"} do %>
      <i class="fa fa-times"></i>
    <% end %>
    <%= link_to edit_survey_path(survey.id, type: get_survey_type(survey.survey_type)) do %>
      <i class="fa fa-pencil-square-o"></i>
    <% end %>
    <span> [<%= get_survey_type(survey.survey_type).capitalize %>] </span>
    <%= link_to survey.name, new_attempt_path(survey_id: survey.id) %>
    <%= "- #{survey.description}" %>
  </p>
</div>
